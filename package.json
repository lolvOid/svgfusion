{
  "name": "svgfusion-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "SVGFusion monorepo - Convert SVG files to React/Vue components",
  "packageManager": "pnpm@10.13.1",
  "author": "lolvoid",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=1 --filter='!svgfusion-docs' --filter='!svgfusion-demo' build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r --filter='!svgfusion-docs' --filter='!svgfusion-demo' test",
    "test:coverage": "pnpm -r --filter='!svgfusion-docs' --filter='!svgfusion-demo' test:coverage",
    "test:watch": "pnpm -r --filter='!svgfusion-docs' --filter='!svgfusion-demo' test:watch",
    "lint": "pnpm -r --filter='!svgfusion-demo' lint",
    "lint:fix": "pnpm -r --filter='!svgfusion-demo' lint:fix",
    "format": "pnpm -r --filter='!svgfusion-demo' format",
    "format:check": "pnpm -r --filter='!svgfusion-demo' format:check",
    "type-check": "pnpm -r --filter='!svgfusion-docs' --filter='!svgfusion-demo' type-check",
    "clean": "pnpm -r clean",
    "prepare": "husky install",
    "release:bundle": "pnpm --filter=svgfusion run release",
    "release:cli": "pnpm --filter=svgfusion-cli run release",
    "release:browser": "pnpm --filter=svgfusion-browser run release",
    "release:all": "pnpm run release:bundle && pnpm run release:cli && pnpm run release:browser",
    "prerelease:bundle": "pnpm --filter=svgfusion run release",
    "prerelease:cli": "pnpm --filter=svgfusion-cli run release",
    "prerelease:browser": "pnpm --filter=svgfusion-browser run release",
    "prerelease:all": "pnpm run prerelease:bundle && pnpm run prerelease:cli && pnpm run prerelease:browser",
    "dry-run:bundle": "pnpm --filter=svgfusion run release:dry",
    "dry-run:cli": "pnpm --filter=svgfusion-cli run release:dry",
    "dry-run:browser": "pnpm --filter=svgfusion-browser run release:dry",
    "dry-run:all": "pnpm run dry-run:bundle && pnpm run dry-run:cli && pnpm run dry-run:browser"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@eslint/js": "^9.31.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.31.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.37.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
